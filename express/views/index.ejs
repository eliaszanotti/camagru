<%- include('includes/head', { title: 'Home' }) %>
<main class="flex flex-col items-center min-h-screen py-10">
	<section
		id="posts"
		class="grid grid-cols-3 max-w-6xl w-full rounded-box gap-6 p-6"
	></section>
</main>

<script>
	let currentPost = 0;

	function getRecentPost(count = 1) {
		for (let i = 0; i < count; i++) {
			fetch(`/post/recent/${currentPost}`)
				.then((response) => response.text())
				.then((data) => {
					posts.innerHTML += data;
				})
				.catch((error) => {
					console.error("Error fetching posts:", error);
				});
			currentPost++;
		}
	}

	document.addEventListener("DOMContentLoaded", getRecentPost(6));

	window.addEventListener("scroll", () => {
		if (window.innerHeight + window.scrollY >= document.body.offsetHeight) {
			getRecentPost(3);
		}
	});
</script>
