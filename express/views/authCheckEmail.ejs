<%- include("includes/head", { title: "Check Your Email" }) %>
<main class="grid place-items-center min-h-screen py-10">
	<section
		class="grid gap-10 max-w-xl w-full bg-base-200 border border-base-300 rounded-box p-10"
	>
		<h1 class="text-4xl">Check Your Email</h1>
		<p>
			Thank you for registering! Please check your email for a
			verification link to activate your account.
		</p>
		<p>If you don't see the email, please check your spam folder.</p>
		<%- include("includes/emailLinks") %>
		<p>
			Once you've verified your account, you can log in to your account.
		</p>
		<div class="flex justify-end">
			<a href="/auth/login" class="btn btn-primary">Login</a>
		</div>
	</section>
</main>
<%- include("includes/foot") %>
